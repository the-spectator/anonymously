%h1 Dashboard#index
%p Find me in app/views/dashboard/index.html.haml
%body
  %footer
  %h3.extra-margin-top Invite Users

  = form_for(User.new, url: user_invitation_path, html: {class: 'form-inline'}) do |f|
    = f.text_field :email, placeholder: 'Email',label:false
    = f.submit 'Invite User'
  =link_to "Create Message", new_message_path(current_user)

  %table
    %tr
      %th content
    - @messages.each do |message|
      %tr
        %td=message.content
        %td=link_to "like", like_message_path(message) if message.is_liked == 0
        %td=" liked " if message.is_liked == 1
        %td=link_to "unlock", unlock_message_path(message) if message.is_unlocked == 0
        %td=User.find(message.sender_id).email if message.is_unlocked == 1
